	<!-- ######################join dialog###################### -->
	<script>
	$(document).ready(function(){
		var dialog,form;
		var activityId;
		var joinButtonId;
	
		$( ".btn-join" ).on( "click", function(event) {
			event.preventDefault();
			dialog.dialog( "open" );
			joinButtonId = this.id; 
		});
	
		function joinActivity() {
			userId = <%= userid %>;
			$.post("/joinActivity",{activityId: joinButtonId, userid: userId}, function(){
				alert("You have successfully join a activity!");
			});
			form[ 0 ].reset();
			dialog.dialog( "close" );
			window.location = "/friendsactivities";
		}
		
		
		dialog = $( ".dialog-form-join" ).dialog({
			autoOpen: false,
			height: 200,
			width: 350,
			modal: true,
			buttons: {
				"Join!": joinActivity,
				Cancel: function() {
					form[ 0 ].reset();
					dialog.dialog( "close" );
				}
			}
		});
	
		form = dialog.find( "form" ).on( "submit", function( event ) {
			event.preventDefault();
			joinActivity();
		});
	});
	</script>
</head>
<body>
	<nav class="navbar navbar-default">
		<div class="container-fluid">
