		<script>
		$(document).ready(function(){
			var friendsname;
			var addfriendname;
			
			$(".btn-search").on( "click", function(event) {
				event.preventDefault();
				friendsname = $( ".friendsname" ).val();
				$.post("/searchfriends",{names: friendsname}, function(){
					alert("success");
				});
			});
			
			
			$(".btn-add").on( "click", function(event) {
				event.preventDefault();
				
				addfriendname = $( ".friendsname" ).val();
				$.post("/friendrequest",{names: addfriendname}, function(){
