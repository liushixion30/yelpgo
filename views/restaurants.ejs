				<!-- ######################review###################### -->
				<script>
				$(document).ready(function(){
					var dialog,form;
					var reviewContent;
					var userId;
					var reviewButtonId;
					
					
					$( ".btn-review" ).on( "click", function(event) {
						event.preventDefault();
						dialog.dialog( "open" );
						reviewButtonId = this.id; 
					});
					
					function addReview() {
						reviewContent = $( ".review" ).val();
						userId = <%= userid %>;
						$.post("http://localhost:3000/addReview",{review: reviewContent, userid: userId, resId: reviewButtonId}, function(){
							alert("You have successfully added a review!");
						});
						form[ 0 ].reset();
						dialog.dialog( "close" );
					}
						
						
					dialog = $( ".dialog-form-review" ).dialog({
						autoOpen: false,
						height: 375,
						width: 350,
						modal: true,
						buttons: {
							"Add review to my profile": addReview,
							Cancel: function() {
								form[ 0 ].reset();
								dialog.dialog( "close" );
							}
						}
					});
					
				    form = dialog.find( "form" ).on( "submit", function( event ) {
				      event.preventDefault();
				      addReview();
				    });
				});
				</script>
				
